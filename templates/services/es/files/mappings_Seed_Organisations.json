{
  "settings": {
    "analysis": {
      "filter": {
        "beamery_email_filter": {
          "type": "pattern_capture",
          "preserve_original": true,
          "patterns": [
            "([^@]+)",
            "(\\p{L}+)",
            "(\\d+)",
            "@(.+)"
          ]
        }
      },
      "analyzer": {
        "beamery_email": {
          "type": "custom",
          "tokenizer": "uax_url_email",
          "filter": [
            "beamery_email_filter",
            "unique",
            "lowercase"
          ]
        },
        "typeahead": {
          "type": "custom",
          "tokenizer": "suffix_phrase",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "tokenizer": {
        "suffix_phrase": {
          "type": "path_hierarchy",
          "delimiter": " ",
          "reverse": true
        }
      },
      "normalizer": {
        "beamery_normalizer": {
          "type": "custom",
          "char_filter": [],
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "organisations": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "companyId": {
          "type": "keyword"
        },
        "type": {
          "type": "keyword",
          "normalizer": "beamery_normalizer"
        },
        "name": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "normalizer": "beamery_normalizer",
              "ignore_above": 256
            },
            "typeahead": {
              "type": "text",
              "analyzer": "typeahead"
            }
          }
        },
        "description": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "normalizer": "beamery_normalizer",
              "ignore_above": 256
            }
          }
        },
        "logo": {
          "type": "keyword"
        },
        "numberOfEmployees" : {
          "type" : "integer"
        },
        "createdAt": {
          "type": "date"
        },
        "updatedAt": {
          "type": "date"
        },
        "phoneNumbers": {
          "properties": {
            "values": {
              "type": "nested",
              "properties": {
                "id": {
                  "type": "keyword"
                },
                "value": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer"
                },
                "deleted": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "emails": {
          "properties": {
            "values": {
              "type": "nested",
              "properties": {
                "id": {
                  "type": "keyword"
                },
                "value": {
                  "type": "text",
                  "fields": {
                    "string": {
                      "type": "text",
                      "analyzer": "beamery_email"
                    },
                    "keyword": {
                      "type": "keyword",
                      "normalizer": "beamery_normalizer",
                      "ignore_above": 256
                    }
                  }
                },
                "type": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer"
                }
              }
            }
          }
        },
        "headquarter": {
          "properties": {
            "geometry": {
              "properties": {
                "type": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer"
                },
                "coordinates": {
                  "type": "geo_point"
                }
              }
            },
            "address": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer",
                  "ignore_above": 256
                }
              }
            },
            "timezone": {
              "type": "byte"
            },
            "city": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer",
                  "ignore_above": 256
                }
              }
            },
            "region" : {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer"
            },
            "postalCode": {
              "type": "keyword",
              "normalizer": "beamery_normalizer"
            },
            "country": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer",
                  "ignore_above": 256
                }
              }
            },
            "countryCode": {
              "type": "keyword",
              "normalizer": "beamery_normalizer"
            },
            "continent": {
              "type": "keyword",
              "normalizer": "beamery_normalizer"
            }
          }
        },

        "industry": {
          "type": "keyword",
          "normalizer": "beamery_normalizer"
        },
        "sameAs": {
            "type": "keyword",
            "normalizer": "beamery_normalizer"
        },
        "specialties":{
            "type": "keyword",
            "normalizer": "beamery_normalizer"
        },
        "technologies":{
            "type": "keyword",
            "normalizer": "beamery_normalizer"
        },
        "keyPeople":{
            "type": "keyword"
        },
        "links": {
          "properties": {
            "values": {
              "type": "nested",
              "properties": {
                "id": {
                  "type": "keyword"
                },
                "type": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer"
                },
                "service": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer"
                },
                "rss": {
                  "type": "keyword"
                },
                "username": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer"
                },
                "userId": {
                  "type": "keyword",
                  "normalizer": "beamery_normalizer"
                },
                "bio": {
                  "type": "text",
                  "fields": {
                    "keyword": {
                      "type": "keyword",
                      "normalizer": "beamery_normalizer",
                      "ignore_above": 256
                    }
                  }
                },
                "value": {
                  "type": "keyword"
                },
                "deleted": {
                  "type": "boolean"
                },
                "following": {
                  "type": "long"
                },
                "followers": {
                  "type": "long"
                }
              }
            }
          }
        },
        "tags": {
          "type": "keyword"
        },
        "childOrganisations": {
          "properties": {
            "type": {
              "type" : "keyword"
            },
            "value" : {
              "type": "keyword"
            }
          }
        },
        "parentOrganisation":{
            "type": "keyword"
        },
        "foundedAt": {
          "type": "date"
        },
        "deletedAt": {
          "type": "date"
        },
        "archivedAt": {
          "type": "date"
        },
        "es": {
          "type": "date"
        }
      }
    }
  }
}
