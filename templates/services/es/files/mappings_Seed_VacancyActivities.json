{
  "settings": {
    "analysis": {
      "filter": {
        "beamery_email_filter": {
          "type": "pattern_capture",
          "preserve_original": true,
          "patterns": [
            "([^@]+)",
            "(\\p{L}+)",
            "(\\d+)",
            "@(.+)"
          ]
        }
      },
      "analyzer": {
        "beamery_email": {
          "type": "custom",
          "tokenizer": "uax_url_email",
          "filter": [
            "beamery_email_filter",
            "unique",
            "lowercase"
          ]
        }
      },
      "tokenizer": {
        "suffix_phrase": {
          "type": "path_hierarchy",
          "delimiter": " ",
          "reverse": true
        }
      },
      "normalizer": {
        "beamery_normalizer": {
          "type": "custom",
          "char_filter": [],
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "vacancyActivities": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "companyId": {
          "type": "keyword"
        },
        "contactId": {
          "type": "keyword"
        },
        "vacancyId": {
          "type": "keyword"
        },
        "createdAt": {
          "type": "date"
        },
        "addedAt": {
          "type": "date"
        },
        "prospectAt": {
          "type": "date"
        },
        "creationSource": {
          "type": "keyword"
        },
        "assignedTo": {
          "type": "keyword"
        },
        "stageSteps": {
          "type": "nested",
          "properties": {
            "to": {
              "properties": {
                "id": {
                  "type": "keyword"
                },
                "value": {
                  "type": "keyword"
                }
              }
            },
            "from": {
              "properties": {
                "id": {
                  "type": "keyword"
                },
                "value": {
                  "type": "keyword"
                }
              }
            },
            "assignedAt": {
              "type": "date"
            },
            "unsetAt": {
              "type": "date"
            },
            "assignedBy": {
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
